<h2>Login</h2>
<%= form_tag session_path do %>
<div class="field">
<%= label_tag :email %><br />
<%= text_field_tag :email %>
</div>
<div class="field">
<%= label_tag :password %><br />
<%= password_field_tag :password %>
</div>
<div class="actions">
<%= submit_tag 'Login' %>
<br/>
</div>
<hr/>
<div>
<p> Not already registered? <%= link_to 'Sign up now!', new_user_path %> 
</div>
<% end %>

