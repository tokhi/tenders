<h1>Listing companies</h1>
<table id="hor-minimalist-a" summary="Employee Pay Sheet">
<thead>  
<tr>
    <th>Org name</th>
    <th>Isa license</th>
    <th>Stablished year</th>
    <th>Business size</th>
    <th>Service description</th>
    <th>Address</th>
    <th>Email</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<% @companies.each do |company| %>
<tbody>  
<tr>
    <td><%= company.org_name %></td>
    <td><%= company.isa_license %></td>
    <td><%= company.stablished_year %></td>
    <td><%= company.business_size %></td>
    <td><%= company.service_description %></td>
    <td><%= company.address %></td>
    <td><%= company.email %></td>
    <td><%= company.website %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
